{
    "require": {
        "slim/slim": "3.12.4",
        "vlucas/phpdotenv": "5.5.0",
        "robmorgan/phinx": "^0.13.1",
        "justinrainbow/json-schema": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.5"
    },
    "scripts": {
        "appinit": [
            "@composer install",
            "@php scripts/appinit.php",
            "phinx migrate",
            "phinx seed:run",
            "@php scripts/appinit_finish.php"
        ],
        "appreset": [
            "@composer install",
            "@php scripts/appreset.php"
        ],
        "localhost": "php -S localhost:8888 -t public public/index.php",
        "tests": "phpunit tests"
    },
    "config": {
        "process-timeout": 3600
    }
}
